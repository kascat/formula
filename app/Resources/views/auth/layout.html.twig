</head>

<body class="off-canvas-sidebar">

<div class="wrapper ">

    {% include('auth/navbar.html.twig') %}

    <div class="wrapper wrapper-full-page">
        {% block body %}{% endblock %}
    </div>
</div>

<script src="{{ asset('material-dashboard/js/core/jquery.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('material-dashboard/demo/demo.js') }}" type="text/javascript"></script>
<script src="{{ asset('material-dashboard/js/material-dashboard.min.js') }}" type="text/javascript"></script>
<!--  Notifications Plugin    -->
<script src="{{ asset('material-dashboard/js/plugins/bootstrap-notify.js') }}"></script>

<script>
    function applyBackgroundColor() {

        $.ajax({
            url: '{{ path('auth_color') }}',
            complete: function(response) {
                var filterColor = response.responseJSON.filterColor;
                $('[filter-color]').attr('filter-color', filterColor);
            }
        });
    }
</script>

{% block scripts %}{% endblock %}

</body>
</html>
