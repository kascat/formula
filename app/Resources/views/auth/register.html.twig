{% extends 'auth/layout.html.twig' %}

{% block style %}
    <style>
        .page-register {
            background-image: url("{{ asset('material-dashboard/img/register.jpg') }}");
        }
    </style>
{% endblock %}

{% block body %}
    <div class="page-header register-page header-filter page-register" filter-color="black">
        <div class="container">
            <div class="row">
                <div class="col-md-10 ml-auto mr-auto">
                    <div class="card card-signup">
                        <h2 class="card-title text-center">Crie sua conta</h2>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-5 ml-auto">
                                    <div class="info info-horizontal">
                                        <div class="icon icon-info">
                                            <i class="material-icons">school</i>
                                        </div>
                                        <div class="description">
                                            <h4 class="info-title text-info">Formula</h4>
                                            <p class="description">
                                                O Formula é um sistema educacional com o objetivo de ensinar e testar os conhecimentos sobre a formulação
                                                de cremes e loções de uso dermatológico e cosmético.
                                            </p>
                                        </div>
                                    </div>
                                    <div class="info info-horizontal">
                                        <div class="icon icon-success">
                                            <i class="material-icons">extension</i>
                                        </div>
                                        <div class="description">
                                            <h4 class="info-title text-success">Conhecimento</h4>
                                            <p class="description">
                                                Após estudar a teoria das emulsões, o usuário deverá estar apto para escolher os ingredientes
                                                para formular uma emulsão para determinado ativo cosmético ou dermatológico.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-5 mr-auto">
                                    <div class="text-center">
                                        <h5 class="mt-3 text-warning"> Informe seus dados </h5>
                                    </div>
                                    {{ form_start(form) }}
                                    <div class="form-group has-default">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i class="material-icons">face</i>
                                                </span>
                                            </div>
                                            {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Nome...'}}) }}
                                        </div>
                                    </div>
                                    <div class="form-group has-default">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i class="material-icons">mail</i>
                                                </span>
                                            </div>
                                            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email...'}}) }}
                                        </div>
                                    </div>
                                    <div class="form-group has-default">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i class="material-icons">lock_outline</i>
                                                </span>
                                            </div>
                                            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Senha...'}}) }}
                                        </div>
                                    </div>
                                    <div class="form-group has-default">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i class="material-icons">lock_outline</i>
                                                </span>
                                            </div>
                                            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Confirme a senha...'}}) }}
                                        </div>
                                    </div>
                                    <div class="form-check">
                                        <label class="form-check-label">
                                            <input id="check-terms" class="form-check-input" type="checkbox" value="">
                                            <span class="form-check-sign">
                                                <span class="check"></span>
                                            </span>
                                            Eu aceito os
                                            <a href="#terms">termos e condições</a>.
                                        </label>
                                    </div>
                                    <div class="text-center">
                                        <button type="submit" id="register-submit" disabled="disabled" class="btn btn-primary btn-round mt-4">Cadastrar-me</button>
                                    </div>
                                    {{ form_end(form) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {% include('auth/footer.html.twig') %}

    </div>
{% endblock %}

{% block scripts %}
    {% if errors|length %}
        <script>
            {% for key, error in errors if 0 == key %}
                $.notify({
                    icon: "warning",
                    message: "{{ error.message|trans([],'form_messages') }}"
                },{
                    type: 'warning',
                    delay: 500,
                    timer: 2000,
                    placement: {
                        from: 'top',
                        align: 'center'
                    }
                });
            {% endfor %}
        </script>
    {% endif %}

    <script>
        $('#check-terms').on('change', function () {
            if ($(this).is(':checked')) {
                $('#register-submit').removeAttr('disabled');
            } else {
                $('#register-submit').attr('disabled', 'disabled');
            }
        });

        applyBackgroundColor();

    </script>
{% endblock %}


